{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha":  true
  },
  "ecmaFeatures": {
    "jsx": true,
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "forOf": true,
    "generators": true,
    "modules": true,
    "objectLiteralComputedProperties": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "restParams": true,
    "spread": true,
    "templateStrings": true,
    "experimentalObjectRestSpread": true
  },
  "globals": {
    "fetch": true
  },
  "rules": {
    "quotes": [ 1, "single" ]
  }
}
